<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">


<hibernate-mapping>
    
    <class name="rest.springrest.mvc.model.Message" 
           table="MESSAGES"
    >
        <id name="id" column="id" access="field"/>
        
        <property name="typeAsString" column="type" type="string" access="property"/>
        <property name="msg" column="payload" type="string" access="field"/>
        <property name="createdAtAsDate" column="created_at" type="date" access="property"/>
        
    </class>
    
</hibernate-mapping>

